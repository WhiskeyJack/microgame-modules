  $userfields = array(
      'entity_name' => 'user',
      'bundle_name' => 'user',
      'data' =>
      array(
          0 =>
          array(
              'field' =>
              array(
                  'translatable' => '0',
                  'entity_types' =>
                  array(
                  ),
                  'settings' =>
                  array(
                      'allowed_values' =>
                      array(
                          0 => 'Female',
                          1 => 'Male',
                      ),
                      'allowed_values_function' => '',
                  ),
                  'storage' =>
                  array(
                      'type' => 'field_sql_storage',
                      'settings' =>
                      array(
                      ),
                      'module' => 'field_sql_storage',
                      'active' => '1',
                      'details' =>
                      array(
                          'sql' =>
                          array(
                              'FIELD_LOAD_CURRENT' =>
                              array(
                                  'field_data_field_gender' =>
                                  array(
                                      'value' => 'field_gender_value',
                                  ),
                              ),
                              'FIELD_LOAD_REVISION' =>
                              array(
                                  'field_revision_field_gender' =>
                                  array(
                                      'value' => 'field_gender_value',
                                  ),
                              ),
                          ),
                      ),
                  ),
                  'foreign keys' =>
                  array(
                  ),
                  'indexes' =>
                  array(
                      'value' =>
                      array(
                          0 => 'value',
                      ),
                  ),
                  'id' => '5',
                  'field_name' => 'field_gender',
                  'type' => 'list_boolean',
                  'module' => 'list',
                  'active' => '1',
                  'locked' => '0',
                  'cardinality' => '1',
                  'deleted' => '0',
                  'columns' =>
                  array(
                      'value' =>
                      array(
                          'type' => 'int',
                          'not null' => false,
                      ),
                  ),
                  'bundles' =>
                  array(
                      'user' =>
                      array(
                          0 => 'user',
                      ),
                  ),
              ),
              'instance' =>
              array(
                  'label' => 'Gender',
                  'widget' =>
                  array(
                      'weight' => '7',
                      'type' => 'options_buttons',
