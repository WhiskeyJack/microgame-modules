                      'active' => 1,
                      'settings' =>
                      array(
                      ),
                  ),
                  'settings' =>
                  array(
                      'user_register_form' => 1,
                  ),
                  'display' =>
                  array(
                      'default' =>
                      array(
                          'label' => 'above',
                          'type' => 'list_default',
                          'weight' => '0',
                          'settings' =>
                          array(
                          ),
